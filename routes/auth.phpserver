<?php

use App\Http\Controllers\Auth\AuthenticatedSessionController;
use App\Http\Controllers\Auth\ConfirmablePasswordController;
use App\Http\Controllers\Auth\EmailVerificationNotificationController;
use App\Http\Controllers\Auth\EmailVerificationPromptController;
use App\Http\Controllers\Auth\NewPasswordController;
use App\Http\Controllers\Auth\PasswordController;
use App\Http\Controllers\Auth\PasswordResetLinkController;
use App\Http\Controllers\Auth\RegisteredUserController;
use App\Http\Controllers\Auth\VerifyEmailController;
use Illuminate\Support\Facades\Route;

Route::middleware('guest')->group(function () {
    Route::get('63-d4/register', [RegisteredUserController::class, 'create'])
                ->name('register');

    Route::post('63-d4/register', [RegisteredUserController::class, 'store']);

    Route::get('63-d4/login', [AuthenticatedSessionController::class, 'create'])
                ->name('login');

    Route::post('63-d4/login', [AuthenticatedSessionController::class, 'store']);

    Route::get('63-d4/forgot-password', [PasswordResetLinkController::class, 'create'])
                ->name('password.request');

    Route::post('63-d4/forgot-password', [PasswordResetLinkController::class, 'store'])
                ->name('password.email');

    Route::get('63-d4/reset-password/{token}', [NewPasswordController::class, 'create'])
                ->name('password.reset');

    Route::post('63-d4/reset-password', [NewPasswordController::class, 'store'])
                ->name('password.store');
});

Route::middleware('auth')->group(function () {
    Route::get('63-d4/verify-email', EmailVerificationPromptController::class)
                ->name('verification.notice');

    Route::get('63-d4/verify-email/{id}/{hash}', VerifyEmailController::class)
                ->middleware(['signed', 'throttle:6,1'])
                ->name('verification.verify');

    Route::post('63-d4/email/verification-notification', [EmailVerificationNotificationController::class, 'store'])
                ->middleware('throttle:6,1')
                ->name('verification.send');

    Route::get('63-d4/confirm-password', [ConfirmablePasswordController::class, 'show'])
                ->name('password.confirm');

    Route::post('63-d4/confirm-password', [ConfirmablePasswordController::class, 'store']);

    Route::put('63-d4/password', [PasswordController::class, 'update'])->name('password.update');

    Route::post('63-d4/logout', [AuthenticatedSessionController::class, 'destroy'])
                ->name('logout');
});
